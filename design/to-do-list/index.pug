html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible",content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    title="ToDo List"
    link(rel="stylesheet",href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css",integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p",crossorigin="anonymous")
  body
    div(class="wrap")
        div(class="header")
            h1 ToDo List
        div(class="main")
            div(class="times")
            div(class="input-bar")
                input(class="input-text",type="text",placeholder="Typing your todoes")
                div(class="add-btn") Add
            div(class="board")
                div(class="delete-btn-group")
                    div(class="delete-btn") Delete
                    div(class="delete-all-btn") Delete All
                div(class="table-outer")
                    div(class="top-btn-group")
                        div(class="top-btn I") Todo
                        div(class="top-btn II") Deleted
                    div(class="search-bar")
                        input(class="search-text",type="text",placeholder="Typing search todoes")
                    table(class="table")
                        thead
                        tbody
                        tfoot
                            tr
                                td
                                    div(class="bottom-text-group")
                                        span(class="searches")
                                        span(class="chooses")
                                        span(class="total")
                    div(class="pagination-group")
            div(class="modal-outer")
                div(class="modal")
                    div(class="modal-body")
                    hr
                    div(class="modal-footer")
                        div(class="confirm") Confirm
                        div(class="cancel") Cancel
        div(class="footer") &copy; CopyRight By Alex Chen
    script(type="module",src="./index.ts")